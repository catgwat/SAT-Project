@model IEnumerable<SAT.DATA.EF.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<div class="choose_section layout_padding">
    <div class="container text-center">
        <h1 class="choose_taital">Enrollments</h1>
        <a asp-action="Create" class="btn btn-dark">Create New Enrollment</a>
    </div>
</div>

<div class="row col-md-10 offset-1">
    <table class="table table-secondary table-hover table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.EnrollmentDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ScheduledClass)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScheduledClass.InstructorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Email)
                </td>
                <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.EnrollmentId">Edit</a> 
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.EnrollmentId">Details</a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.EnrollmentId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>