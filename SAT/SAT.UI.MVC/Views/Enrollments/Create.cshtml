@model SAT.DATA.EF.Models.Enrollment

@{
    ViewData["Title"] = "Create New Enrollment";
}
<div class="choose_section layout_padding">
    <div class="container text-center">
        <h1 class="choose_taital">Create New Enrollment</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Student</label>
                <select asp-for="StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ScheduledClassId" class="control-label">Class Instructor</label>
                <select asp-for="ScheduledClassId" class ="form-control" asp-items="ViewBag.ScheduledClassId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EnrollmentDate" class="control-label"></label>
                <input asp-for="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary mx-4" asp-action="Index">Back to Enrollments</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
